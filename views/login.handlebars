<div class="uk-container uk-margin-medium-top uk-margin-large-bottom">
  <div class="uk-container-xsmall uk-align-center">
    <h2>Login</h2>

    <form class="login-form">
      <div class="uk-margin">
        <label for="username_input">Username</label>
        <input
          class="uk-input"
          type="text"
          id="username_input"
          maxlength="30"
          required
        />
      </div>
      <div class="uk-margin">
        <label for="password_input">Password</label>
        <input
          class="uk-input"
          type="password"
          id="password_input"
          maxlength="255"
          required
        />
      </div>
      <div class="uk-margin">
        <button class="btn" type="submit">Login</button>
      </div>
    </form>

    <div>
      <p class="uk-margin-remove">Need an account?</p>
      <p class="uk-margin-remove"><a href="/signup">Sign up instead</a></p>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>