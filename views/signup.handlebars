<h2>Sign Up</h2>

<form class="signup-form">
  <div>
    <label for="first_name_input">First Name</label>
    <input type="text" id="first_name_input" maxlength="30" required />
  </div>
  <div>
    <label for="last_name_input">Last Name</label>
    <input type="text" id="last_name_input" maxlength="30" required />
  </div>
  <div>
    <label for="email_input">Email</label>
    <input type="email" id="email_input" maxlength="255" required />
  </div>
  <div>
    <label for="phone_input">Phone Number</label>
    <input type="tel" id="phone_input" maxlength="30" />
  </div>
  <div>
    <label for="favorite_genre_selection">Favorite Genre</label>
    <select id="favorite_genre_selection">
      <option value="" disabled selected>Choose a genre</option>
      {{#each genres as |genre|}}
        <option value="{{genre.id}}">{{genre.name}}</option>
      {{/each}}
    </select>
  </div>
  <div>
    <label for="username_input">Username</label>
    <input type="text" id="username_input" maxlength="30" required />
  </div>
  <div>
    <label for="password_input">Password</label>
    <input type="password" id="password_input" maxlength="255" required />
  </div>
  <div>
    <label for="renter_password_input">Re-enter Password</label>
    <input type="password" id="renter_password_input" maxlength="255" required />
  </div>
  <div>
    <button type="submit">sign up</button>
  </div>
</form>

<div>
  <p>Already have an account?</p>
  <p><a href="/login">Login instead.</a></p>
</div>

<script src="/js/signup.js"></script>